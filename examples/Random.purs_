module Example.Random where
import Prelude hiding (div)
import Data.Int (toNumber)
import Data.Array ((..), mapWithIndex)
import Data.Array.NonEmpty (NonEmptyArray, cons')
import Effect (Effect)
import Pha as H
import Pha.App (Document, app, attachTo)
import Pha.Random as R
import Pha.Elements as HH
import Pha.Events as E
import Pha.Util (pc)
import Run as Run

data Card = Ace | Two | Three | Four | Five | Six | Seven | Eight | Nine | Ten | Jack | Queen | King
cards âˆ· NonEmptyArray Card
cards = cons' Ace [Two, Three, Four, Five, Six, Seven, Eight, Nine, Ten, Jack, Queen, King]

type State = {
    dice âˆ· Int,
    puzzle âˆ· Array Int,
    card âˆ· Card
}

data Msg = RollDice | DrawCard | ShufflePuzzle

-- initial state
state âˆ· State
state = {
    dice: 1,
    puzzle: 0 .. 15,
    card: Ace
}

update âˆ· Msg â†’ Update State EFFS

update RollDice = randomly \st â†’ st{dice = _} <$> R.int 1 6
update DrawCard = randomly \st â†’  st{card = _} <$> R.element cards
update ShufflePuzzle = randomly \st â†’ st{puzzle = _} <$> R.shuffle st.puzzle

viewCard âˆ· Card â†’ String
viewCard Ace   = "ðŸ‚¡"
viewCard Two   = "ðŸ‚¢"
viewCard Three = "ðŸ‚£"
viewCard Four  = "ðŸ‚¤"
viewCard Five  = "ðŸ‚¥"
viewCard Six   = "ðŸ‚¦"
viewCard Seven = "ðŸ‚§"
viewCard Eight = "ðŸ‚¨"
viewCard Nine  = "ðŸ‚©"
viewCard Ten   = "ðŸ‚ª"
viewCard Jack  = "ðŸ‚«"
viewCard Queen = "ðŸ‚­"
viewCard King  = "ðŸ‚®"

view âˆ· State â†’ Document Msg
view {dice, puzzle, card} = {
    title: "Randomness example",
    body:
        HH.div [] [
            HH.div [H.class' "counter" true] [H.text $ show dice],
            HH.button [E.onclick RollDice] [H.text "Roll dice"],

            HH.div [H.style "font-size" "12em" ] [H.text $ viewCard card],
            HH.button [E.onclick DrawCard] [H.text "Draw" ],

            HH.div [H.class' "puzzle" true] (
                puzzle # mapWithIndex \i j â†’
                    HH.div [
                        H.class' "puzzle-item" true,
                        H.style "left" $ pc (0.25 * toNumber (j / 4)),
                        H.style "top" $ pc (0.25 * toNumber (j `mod` 4)) 
                    ] [H.text $ show i]
            ),
            HH.button [E.onclick ShufflePuzzle] [H.text "Shuffle"]
        ]
}

main âˆ· Effect Unit
main = app {
    init: {state, effect: \m â†’ update m RollDice},
    view,
    update,
    subscriptions: const []
} # attachTo "root"
