module Example.Random where
import Prelude hiding (div)
import Data.Int (toNumber)
import Data.Array ((..), mapWithIndex, insertAt, foldl)
import Data.Array.NonEmpty (NonEmptyArray, cons')
import Data.Array.NonEmpty as N
import Data.Traversable (sequence)
import Data.Maybe(Maybe(..), fromMaybe)
import Data.Tuple.Nested ((/\))
import Effect.Random (randomInt)
import Effect (Effect)
import Effect.Class (liftEffect)
import Pha.Update (get, modify)
import Pha as H
import Pha.App (app)
import Pha.Elements as HH
import Pha.Events as E
import Pha.Util (pc)


shuffle ‚à∑ ‚àÄa. Array a ‚Üí Effect (Array a)
shuffle array = do
    rnds ‚Üê sequence $ array # mapWithIndex \i value ‚Üí {value, index: _} <$> randomInt 0 i
    pure $ rnds # foldl (\t {value, index} ‚Üí fromMaybe [] (insertAt index value t)) []



data Card = Ace | Two | Three | Four | Five | Six | Seven | Eight | Nine | Ten | Jack | Queen | King
cards ‚à∑ NonEmptyArray Card
cards = cons' Ace [Two, Three, Four, Five, Six, Seven, Eight, Nine, Ten, Jack, Queen, King]

type State = {
    dice ‚à∑ Int,
    puzzle ‚à∑ Array Int,
    card ‚à∑ Card
}

data Msg = RollDice | DrawCard | ShufflePuzzle

-- initial state
state ‚à∑ State
state = {
    dice: 1,
    puzzle: 0 .. 15,
    card: Ace
}

update ‚à∑ Msg ‚Üí Update State
update RollDice = do
    n <- liftEffect $ randomInt 1 6
    modify _{dice = n}
update DrawCard = do
    n <- liftEffect $ randomInt 0 (N.length cards - 1)
    modify _{card = fromMaybe (N.head cards) (N.index cards n)}
update {get, modify} ShufflePuzzle = do
    p <- get <#> _.puzzle
    p2 <- liftEffect $ shuffle p
    modify _{puzzle = p2}

viewCard ‚à∑ Card ‚Üí String
viewCard Ace   = "üÇ°"
viewCard Two   = "üÇ¢"
viewCard Three = "üÇ£"
viewCard Four  = "üÇ§"
viewCard Five  = "üÇ•"
viewCard Six   = "üÇ¶"
viewCard Seven = "üÇß"
viewCard Eight = "üÇ®"
viewCard Nine  = "üÇ©"
viewCard Ten   = "üÇ™"
viewCard Jack  = "üÇ´"
viewCard Queen = "üÇ≠"
viewCard King  = "üÇÆ"

view ‚à∑ State ‚Üí H.VDom Msg
view {dice, puzzle, card} =
        HH.div [] [
            HH.div [H.class' "counter" true] [H.text $ show dice],
            HH.button [E.onclick RollDice] [H.text "Roll dice"],

            HH.div [H.style "font-size" "12em" ] [H.text $ viewCard card],
            HH.button [E.onclick DrawCard] [H.text "Draw" ],

            H.keyed "div" [H.class_ "puzzle"] (
                puzzle # mapWithIndex \i j ‚Üí show i /\
                    HH.div [
                        H.class' "puzzle-item" true,
                        H.style "left" $ pc (0.25 * toNumber (j / 4)),
                        H.style "top" $ pc (0.25 * toNumber (j `mod` 4)) 
                    ] [H.text $ show i]
            ),
            HH.button [E.onclick ShufflePuzzle] [H.text "Shuffle"]
        ]

main ‚à∑ Effect Unit
main = app {
    init: {state, action: Just RollDice},
    view,
    update,
    subscriptions: const [],
    selector: "#root"
}
